<!-- Chat CSS stylesheet -->
<link href="stylesheets/style.css" rel="stylesheet">


<div class="container">
  <div class="flex-grid">

    <!-- My Profile Modal -->
    <div class="modal fade" id="profileModal" aria-labelledby="profileModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <!-- Header -->
          <div class="modal-header">
            <h5 class="modal-title" id="profileModalLabel">My Profile</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <!-- Body -->
          <div class="modal-body">
            <!-- Avatar -->
            <img id="avatar" alt="avatar image" src="">
            <!-- browse/upload button -->
            <form id="uploadForm" enctype="multipart/form-data" action="/api/avatar" method="post">
              <div id="uploadBtn">
                <input class="uploadBtn" type="submit" value="Upload Image" name="submit"><span id="status"></span>
                <input type="file" name="userAvatar">
              </div>
            </form>
            <!-- update user details -->
            <form id="updateUser" action="/api/updateUser" method="put">
              <!-- Bio -->
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">About Me: </label>
                <div class="col-sm-10">
                  <textarea id="bio" name="bio" class="form-control" aria-label="With textarea"></textarea>
                </div>
                <!-- Likes -->
              </div>
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">Likes: </label>
                <div class="col-sm-10">
                  <input data-focus="true" type="text" id="likes" name="likes" class="form-control">
                </div>
                <!-- Location -->
              </div>
              <div class="form-group row">
                <label for="location" class="col-sm-2 col-form-label">Location: </label>
                <div class="col-sm-10">
                  <input type="text" id="location" name="location" class="form-control">
                </div>
                <!-- Email -->
              </div>
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">Email: </label>
                <div class="col-sm-10">
                  <input type="text" id="email" name="email" class="form-control">
                </div>
                <!-- Phone -->
              </div>
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">Phone: </label>
                <div class="col-sm-10">
                  <input type="text" id="phone" name="phone" class="form-control">
                </div>
              </div>
              <!-- Save Changes and Close -->
              <button type="button" class="btn btn-light" id="updateBtnClose" data-dismiss="modal">Close</button>
              <button type="submit" id="updateBtn" class="btn btn-light">Save Changes</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- View User List Modal -->
    <div class="modal fade" id="userModal" aria-labelledby="profileModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
           <!-- Header -->
          <div class="modal-header">
            <h5 class="modal-title" id="profileModalLabel2">Username</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
           <!-- Body -->
          <div class="modal-body">
             <!-- Avatar -->
            <img id="avatar2" alt="avatar image" src="">
             <!-- Bio -->
            <div class="form-group row">
              <label class="col-sm-2 col-form-label">About Me: </label>
              <div class="col-sm-10">
                <textarea id="bio2" name="bio" class="form-control" aria-label="With textarea"></textarea>
              </div>
            </div>
             <!-- Likes -->
            <div class="form-group row">
              <label class="col-sm-2 col-form-label">Likes: </label>
              <div class="col-sm-10">
                <input data-focus="true" type="text" id="likes2" name="likes" class="form-control">
              </div>
            </div>
             <!-- Location -->
            <div class="form-group row">
              <label for="location" class="col-sm-2 col-form-label">Location: </label>
              <div class="col-sm-10">
                <input type="text" id="location2" name="location" class="form-control">
              </div>
            </div>
             <!-- Email -->
            <div class="form-group row">
              <label class="col-sm-2 col-form-label">Email: </label>
              <div class="col-sm-10">
                <input type="text" id="email2" name="email" class="form-control">
              </div>
            </div>
             <!-- Phone -->
            <div class="form-group row">
              <label class="col-sm-2 col-form-label">Phone: </label>
              <div class="col-sm-10">
                <input type="text" id="phone2" name="phone" class="form-control">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar Nav -->
    <aside class="col sidebar">
       <!-- Logo -->
      <img id="logo" src="./img/wiseMonkeyLogo.png" alt="logo">
       <!-- Side Menu -->
      <div class="sideMenu">
        <div class="sideLink"><i class="fas fa-sign-out-alt"><a href="/logout"> Sign Out</a></i></div>
        <div class="sideLink" data-toggle="modal" data-target="#profileModal"><i class="fas fa-user-circle"></i> My
          Profile</div>
        <div id="users" class="users"></div>
      </div>
    </aside>
     <!-- Chat window  -->
    <section class="col main">
       <!-- Notification -->
      <h2>Welcome <span class="member-name"></span></h2>
      <div class="statusHeader">
        <div class="chatStatus"></div>
        <div class="popupMessages" id="popUpMessages"></div>
      </div>
       <!-- Return to Public Chat button -->
      <div class="return"><i class="far fa-arrow-alt-circle-left fa-3x" data-toggle="tooltip" data-placement="right"
          title="Return to Public Chat"></i></div>
      <!-- Chat Display Area -->
      <div class="chat page">
        <div class="chatArea">
          <ul class="messages"></ul>
        </div>
      </div>
    </section>
  </div>
</div>
 <!-- Send Message Input Field -->
<input class="inputMessage" placeholder="TYPE HERE... (USE UP/DOWN ARROW KEY TO CHANGE YOUR USERNAME COLOUR)">